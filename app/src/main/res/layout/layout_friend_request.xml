<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentStart="true"
            android:id="@+id/single_request_user_image"
            android:src="@drawable/default_user"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <TextView
            android:id="@+id/single_request_user_name"
            tools:text="Username"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/single_request_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/single_request_accept"
            android:src="@drawable/ic_ok"
            android:layout_width="56dp"
            android:layout_toStartOf="@id/single_request_delete"
            android:layout_height="56dp" />

        <ImageView
            android:id="@+id/single_request_delete"
            android:src="@drawable/ic_no"
            android:layout_width="56dp"
            android:layout_alignParentEnd="true"
            android:layout_height="56dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>